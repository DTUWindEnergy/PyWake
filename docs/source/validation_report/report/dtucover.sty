%
\DeclareDocumentCommand{\dtucover@drawbg}{ O{ } }{
  \ifthenelse{\isempty{#1}}{ %
    \IfFileExists{\thedepartmentLogo.pdf}
      {\newcommand\dtucover@deplogo{\includegraphics[height=\dtucover@logoright]{\thedepartmentLogo}}}
